<Window
    Height="540"
    Left="600"
    Title="MainWindow"
    Top="-1080"
    Width="960"
    mc:Ignorable="d"
    x:Class="Arion.Theme.Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <TabControl TabStripPlacement="Left">
        <TabItem Header="Buttons">
            <!--  BUTTONS  -->
            <WrapPanel Orientation="Horizontal">
                <Button
                    Content="Test"
                    Margin="5"
                    Style="{StaticResource FilledLarge}" />
                <Button
                    Content="Test"
                    IsEnabled="False"
                    Margin="5"
                    Style="{StaticResource FilledLarge}" />

                <Button
                    Content="Test"
                    Margin="5"
                    Style="{StaticResource OutlineLarge}" />
                <Button
                    Content="Test"
                    IsEnabled="False"
                    Margin="5"
                    Style="{StaticResource OutlineLarge}" />

                <Button
                    Content="Test"
                    Margin="5"
                    Style="{StaticResource TextLarge}" />
                <Button
                    Content="Test"
                    IsEnabled="False"
                    Margin="5"
                    Style="{StaticResource TextLarge}" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Check boxes">
            <!--  CHECK BOXES  -->
            <WrapPanel Orientation="Horizontal">
                <CheckBox Margin="5" />
                <CheckBox IsEnabled="False" Margin="5" />

                <CheckBox IsChecked="True" Margin="5" />
                <CheckBox
                    IsChecked="True"
                    IsEnabled="False"
                    Margin="5" />

                <CheckBox
                    IsChecked="{x:Null}"
                    IsThreeState="True"
                    Margin="5" />
                <CheckBox
                    IsChecked="{x:Null}"
                    IsEnabled="False"
                    IsThreeState="True"
                    Margin="5" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="ComboBoxes">
            <!--  COMBO BOXES  -->
            <WrapPanel Orientation="Horizontal">
                <ComboBox Margin="5" Width="200" />
                <ComboBox
                    IsEnabled="False"
                    Margin="5"
                    Width="200" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Radio buttons">
            <!--  RADIO BUTTONS  -->
            <WrapPanel Orientation="Horizontal">
                <RadioButton Margin="5" />
                <RadioButton IsEnabled="False" Margin="5" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Scroll bars">
            <!--  SCROLL BARS  -->

        </TabItem>
        <TabItem Header="Switchers">
            <!--  SWITCHERS  -->
            <WrapPanel Orientation="Horizontal">
                <RadioButton Margin="5" />
                <RadioButton Margin="5" />
                <RadioButton Margin="5" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Sliders">
            <!--  SLIDERS  -->
            <WrapPanel Orientation="Horizontal">
                <Slider Margin="5" Width="200" />
                <Slider Margin="5" Width="200" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Rangers">
            <!--  RANGERS  -->

        </TabItem>
        <TabItem Header="Steppers">
            <!--  STEPPERS  -->

        </TabItem>
        <TabItem Header="Tables">
            <!--  TABLES  -->

        </TabItem>
        <TabItem Header="Tabs">
            <!--  TABS  -->

        </TabItem>
        <TabItem Header="Text boxes">
            <!--  TEXT BOXES  -->
            <WrapPanel Orientation="Horizontal">
                <TextBox Margin="5" Width="200" />
                <TextBox
                    Margin="5"
                    Text="asdasd"
                    Width="200" />
                <TextBox
                    IsEnabled="False"
                    Margin="5"
                    Width="200" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Time inputs">
            <!--  TIME INPUT  -->

        </TabItem>
        <TabItem Header="Toggle buttons">
            <!--  TOGGLE BUTTONS  -->
            <WrapPanel Orientation="Horizontal">
                <ToggleButton Margin="5" />
                <ToggleButton IsChecked="True" Margin="5" />
                <ToggleButton
                    IsChecked="True"
                    IsEnabled="False"
                    Margin="5" />
                <ToggleButton IsEnabled="False" Margin="5" />

                <ToggleButton
                    IsChecked="{x:Null}"
                    IsThreeState="True"
                    Margin="5" />
                <ToggleButton
                    IsChecked="{x:Null}"
                    IsEnabled="False"
                    IsThreeState="True"
                    Margin="5" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Tooltips">
            <!--  TOOLTIPS  -->

        </TabItem>
    </TabControl>
</Window>