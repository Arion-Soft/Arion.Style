<Window
    x:Class="Arion.Theme.Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="960"
    Height="540"
    Left="600"
    Top="0"
    mc:Ignorable="d">
    <TabControl TabStripPlacement="Left">
        <TabItem Header="Buttons">
            <!--  BUTTONS  -->
            <WrapPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="200"
                        Content="Стиль: FilledLarge"
                        Style="{StaticResource Lbl}" />
                    <Button
                        Margin="5"
                        Content="Button"
                        Style="{StaticResource FilledLarge}" />
                    <Button
                        Margin="5"
                        Content="Button"
                        IsEnabled="False"
                        Style="{StaticResource FilledLarge}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="200"
                        Content="Стиль: OutlineLarge"
                        Style="{StaticResource Lbl}" />
                    <Button
                        Margin="5"
                        Content="Button"
                        Style="{StaticResource OutlineLarge}" />
                    <Button
                        Margin="5"
                        Content="Button"
                        IsEnabled="False"
                        Style="{StaticResource OutlineLarge}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="200"
                        Content="Стиль: TextLarge"
                        Style="{StaticResource Lbl}" />
                    <Button
                        Margin="5"
                        Content="Button"
                        Style="{StaticResource TextLarge}" />
                    <Button
                        Margin="5"
                        Content="Button"
                        IsEnabled="False"
                        Style="{StaticResource TextLarge}" />
                </StackPanel>

                <!--  TODO Button Group  -->
                <!--  TODO Button other size  -->
            </WrapPanel>
        </TabItem>
        <TabItem Header="Check boxes">
            <!--  CHECK BOXES  -->
            <WrapPanel Orientation="Horizontal">
                <CheckBox Margin="5" />
                <CheckBox Margin="5" IsEnabled="False" />

                <CheckBox Margin="5" IsChecked="True" />
                <CheckBox
                    Margin="5"
                    IsChecked="True"
                    IsEnabled="False" />

                <CheckBox
                    Margin="5"
                    IsChecked="{x:Null}"
                    IsThreeState="True" />
                <CheckBox
                    Margin="5"
                    IsChecked="{x:Null}"
                    IsEnabled="False"
                    IsThreeState="True" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="ComboBoxes">
            <!--  COMBO BOXES  -->
            <WrapPanel Orientation="Horizontal">
                <ComboBox Width="200" Margin="5" />
                <ComboBox
                    Width="200"
                    Margin="5"
                    IsEnabled="False" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Radio buttons">
            <!--  RADIO BUTTONS  -->
            <WrapPanel Orientation="Horizontal">
                <RadioButton Margin="5" />
                <RadioButton Margin="5" IsEnabled="False" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Scroll bars">
            <!--  SCROLL BARS  -->

        </TabItem>
        <TabItem Header="Switchers">
            <!--  SWITCHERS  -->
            <WrapPanel Orientation="Horizontal">
                <RadioButton Margin="5" />
                <RadioButton Margin="5" />
                <RadioButton Margin="5" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Sliders">
            <!--  SLIDERS  -->
            <WrapPanel Orientation="Horizontal">
                <Slider Width="200" Margin="5" />
                <Slider Width="200" Margin="5" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Rangers">
            <!--  RANGERS  -->

        </TabItem>
        <TabItem Header="Steppers">
            <!--  STEPPERS  -->

        </TabItem>
        <TabItem Header="Tables">
            <!--  TABLES  -->

        </TabItem>
        <TabItem Header="Tabs">
            <!--  TABS  -->

        </TabItem>
        <TabItem Header="Text boxes">
            <!--  TEXT BOXES  -->
            <WrapPanel Orientation="Horizontal">
                <TextBox Width="200" Margin="5" />
                <TextBox
                    Width="200"
                    Margin="5"
                    Text="asdasd" />
                <TextBox
                    Width="200"
                    Margin="5"
                    IsEnabled="False" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Time inputs">
            <!--  TIME INPUT  -->

        </TabItem>
        <TabItem Header="Toggle buttons">
            <!--  TOGGLE BUTTONS  -->
            <WrapPanel Orientation="Horizontal">
                <ToggleButton Margin="5" />
                <ToggleButton Margin="5" IsChecked="True" />
                <ToggleButton
                    Margin="5"
                    IsChecked="True"
                    IsEnabled="False" />
                <ToggleButton Margin="5" IsEnabled="False" />

                <ToggleButton
                    Margin="5"
                    IsChecked="{x:Null}"
                    IsThreeState="True" />
                <ToggleButton
                    Margin="5"
                    IsChecked="{x:Null}"
                    IsEnabled="False"
                    IsThreeState="True" />
            </WrapPanel>
        </TabItem>
        <TabItem Header="Tooltips">
            <!--  TOOLTIPS  -->

        </TabItem>
    </TabControl>
</Window>