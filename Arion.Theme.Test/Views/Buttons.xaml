        <Slider
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="8"
            Margin="10"
            Maximum="100"
            Minimum="0"
            x:Name="SliderBtn" />

        <Separator
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Grid.Row="16" />

        <StackPanel
            Grid.Column="1"
            Grid.Row="17"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnGroupedFilled1">
                <Button
                    Content="First"
                    Style="{StaticResource BtnFilled}"
