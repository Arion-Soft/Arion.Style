        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Grid.Row="4"
            Orientation="Horizontal">
            <smtx:XamlDisplay Margin="5" UniqueKey="BtnFilled5">
                <Button
                    Content="Button"
