<UserControl
    x:Class="Arion.Style.Controls.Icon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Root"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="40"
    d:DesignWidth="40"
    Background="Transparent"
    Loaded="Icon_OnLoaded"
    mc:Ignorable="d">
    <Path
        Width="{Binding ElementName=Root, Path=Width}"
        Height="{Binding ElementName=Root, Path=Height}"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Data="{Binding ElementName=Root, Path=Image, Mode=TwoWay}"
        Fill="{Binding ElementName=Root, Path=Fill, Mode=TwoWay, Delay=4000}"
        Stretch="Uniform"
        Stroke="{Binding ElementName=Root, Path=StrokeColor}"
        StrokeThickness="{Binding ElementName=Root, Path=Stroke}" />
</UserControl>
