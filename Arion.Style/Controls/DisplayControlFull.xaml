<UserControl
    x:Class="Arion.Style.Controls.DisplayControlFull"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:attach="clr-namespace:Arion.Style.AttachedProperties"
    x:Name="Root"
    Width="142"
    Height="54"
    d:DesignHeight="54"
    d:DesignWidth="142"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!-- <ResourceDictionary> -->
        <!--     <ResourceDictionary.MergedDictionaries> -->
        <!--         <ResourceDictionary Source="/ArionUiTheme.xaml" /> -->
        <!--     </ResourceDictionary.MergedDictionaries> -->
        <!-- </ResourceDictionary> -->
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <RepeatButton
            Grid.Column="0"
            Width="40"
            Height="54"
            Padding="5"
            attach:Hint.CornerRadius="6,0,0,6"
            Click="BtnMinus_OnClick"
            Content="-"
            FontSize="24"
            Style="{StaticResource RbOutline}" />
        <Border
            Grid.Column="1"
            Background="White"
            BorderBrush="{StaticResource Lg2}"
            BorderThickness="0,1,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="14" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="14" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Width="45"
                    Height="14"
                    VerticalAlignment="Top">
                    <Path Data="M40 13.0001C37 14 8 14.0002 5 13.0001C2 12 0 7.72476e-05 0 7.72476e-05L45 7.72476e-05C45 7.72476e-05 43 12.0001 40 13.0001Z" Fill="{StaticResource Lg4}" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        LineHeight="10"
                        Text="{Binding ElementName=Root, Path=Label}" />
                </Grid>
                <TextBlock
                    Grid.Row="1"
                    Padding="0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Regular"
                    Text="{Binding ElementName=Root, Path=ActualValue}" />
                <Grid
                    Grid.Row="2"
                    Width="45"
                    Height="14"
                    VerticalAlignment="Bottom">
                    <Path Data="M5 0.999916C8 2.38419e-07 37 -0.000168324 40 0.999916C43 2 45 13.9999 45 13.9999H0C0 13.9999 2 1.99983 5 0.999916Z" Fill="{StaticResource Lg4}" />
                    <TextBlock
                        Padding="0"
                        VerticalAlignment="Center"
                        FontSize="12"
                        LineHeight="10"
                        Text="{Binding ElementName=Root, Path=TargetValue}" />
                </Grid>
            </Grid>
        </Border>
        <RepeatButton
            Grid.Column="2"
            Width="40"
            Height="54"
            Padding="5"
            attach:Hint.CornerRadius="0,6,6,0"
            Click="BtnPlus_OnClick"
            Content="+"
            FontSize="24"
            Style="{StaticResource RbOutline}" />
    </Grid>
</UserControl>
