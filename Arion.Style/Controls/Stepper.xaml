<UserControl
    x:Class="Arion.Style.Controls.Stepper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arion.Style.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties"
    x:Name="Root"
    Height="40"
    MinWidth="150"
    d:DesignHeight="40"
    d:DesignWidth="150"
    Background="Transparent"
    KeyDown="Stepper_OnKeyDown"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!-- <ResourceDictionary> -->
        <!--     <ResourceDictionary.MergedDictionaries> -->
        <!--         <ResourceDictionary Source="/Arion.Style;component/ArionUiTheme.xaml" /> -->
        <!--     </ResourceDictionary.MergedDictionaries> -->
        <!-- </ResourceDictionary> -->
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>

        <RepeatButton
            Grid.Column="0"
            Padding="5"
            wpf:Button.Icon="Minus"
            wpf:Hint.CornerRadius="6,0,0,6"
            Click="BtnMinus_OnClick"
            FontSize="24"
            Style="{StaticResource RbOutline}" />
        <Border
            Grid.Column="1"
            Background="White"
            BorderBrush="{StaticResource Lg3}"
            BorderThickness="0,1,0,1"
            MouseDown="UIElement_OnMouseDown">
            <Grid>
                <TextBlock
                    Name="TblValue"
                    Padding="0,4,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    IsHitTestVisible="False"
                    Text="{Binding ElementName=Root, Path=Value, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center" />
                <TextBox
                    Name="TbValue"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    wpf:Hint.CornerRadius="0"
                    BorderThickness="0"
                    FontSize="18"
                    LostFocus="TbValue_OnLostFocus"
                    PreviewTextInput="TbValue_OnPreviewTextInput"
                    Text="{Binding ElementName=Root, Path=Value, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"
                    Visibility="Collapsed" />
            </Grid>
        </Border>
        <RepeatButton
            Grid.Column="2"
            Padding="5"
            wpf:Button.Icon="Plus"
            wpf:Hint.CornerRadius="0,6,6,0"
            Click="BtnPlus_OnClick"
            Style="{StaticResource RbOutline}" />
    </Grid>
</UserControl>
