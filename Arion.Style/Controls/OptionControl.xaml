<UserControl
    x:Class="Arion.Style.Controls.OptionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Root"
    Width="550"
    Height="60"
    Margin="5,2.5"
    mc:Ignorable="d">
    <Border
        x:Name="Border"
        Margin="0"
        Padding="0"
        Background="{StaticResource Lg1}"
        BorderBrush="{StaticResource Dg2}"
        BorderThickness="1"
        CornerRadius="5"
        MouseDown="UIElement_OnMouseDown">
        <StackPanel Orientation="Horizontal">
            <TextBlock
                x:Name="LblText"
                Width="450"
                MaxHeight="55"
                Margin="0"
                Padding="0"
                VerticalAlignment="Center"
                FontSize="18"
                Foreground="{StaticResource Dg2}"
                Text="{Binding ElementName=Root, Path=Caption}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <ToggleButton
                Name="Tg"
                Margin="5,0"
                Checked="Tg_OnChecked"
                IsChecked="{Binding IsChecked, ElementName=Root}"
                Style="{StaticResource TgOnOff}"
                Unchecked="Tg_OnUnchecked" />
        </StackPanel>
    </Border>
</UserControl>
