                                        Direction="0"
                                        Opacity="0"
                                        ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value=".5" />
