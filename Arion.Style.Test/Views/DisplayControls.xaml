<UserControl
    x:Class="Arion.Theme.Test.Views.DisplayControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Arion.Style.Controls;assembly=Arion.Style"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arion.Theme.Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    d:DesignHeight="1000"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Width="Auto"
            Margin="10"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Display control"
            FontSize="32"
            Style="{DynamicResource Lbl}" />

        <controls:DisplayControl
            Grid.Row="1"
            Grid.Column="0"
            Width="170"
            Height="90"
            Text="кВ" />

        <controls:DisplayControlFull
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Label="кВ"
            Maximum="320"
            Minimum="0"
            QuickChange="True"
            SpeedChange="1.05"
            Step="1"
            TargetValueChange="DisplayControlFull_OnTargetValueChange" />

        <controls:DisplayControlFull
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            Label="мА"
            Maximum="22.5"
            Minimum="0"
            QuickChange="True"
            Round="1"
            Step=".1"
            TargetValueChange="DisplayControlFull_OnTargetValueChange" />
    </Grid>
</UserControl>