<UserControl
    x:Class="Arion.Theme.Test.Views.Buttons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Arion.Theme.Test.ViewModel"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    d:DesignHeight="1000"
    d:DesignWidth="1900"
    mc:Ignorable="d">
    <UserControl.Resources />
    <UserControl.DataContext>
        <vm:ButtonsViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="Auto"
            Margin="10"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource Buttons}"
            FontSize="38"
            RenderTransformOrigin="0.5,0.5"
            Style="{DynamicResource Lbl}" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Width="Auto"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource Filled}"
            FontSize="32"
            Style="{DynamicResource Lbl}" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Width="Auto"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource Outline}"
            FontSize="32"
            Style="{DynamicResource Lbl}" />
        <Label
            Grid.Row="1"
            Grid.Column="3"
            Width="Auto"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource Text}"
            FontSize="32"
            Style="{DynamicResource Lbl}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{DynamicResource Default}"
            FontSize="14" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{DynamicResource LeftIcon}"
            FontSize="14" />
        <Label
            Grid.Row="4"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{DynamicResource RightIcon}"
            FontSize="14" />
        <Label
            Grid.Row="5"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{DynamicResource Icon}"
            FontSize="14" />
        <Label
            Grid.Row="6"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{DynamicResource LinearProgressBar}"
            FontSize="14" />
        <Label
            Grid.Row="7"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{DynamicResource CircleProgressBar}"
            FontSize="14" />
        <Label
            Grid.Row="17"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Grouped"
            FontSize="14" />

        <Grid
            Grid.Row="2"
            Grid.RowSpan="6"
            Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style BasedOn="{StaticResource BtnFilled}" TargetType="Button">
                    <Setter Property="Content" Value="{DynamicResource Button}" />
                </Style>
            </Grid.Resources>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Click="ButtonBase_OnClick" />
                <Button Name="DisableButton" IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button wpf:Button.LeftIcon="User" />
                <Button wpf:Button.LeftIcon="User" IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button wpf:Button.RightIcon="User" />
                <Button wpf:Button.RightIcon="User" IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button wpf:Button.Icon="User" Content="" />
                <Button
                    wpf:Button.Icon="User"
                    Content=""
                    IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Content="" />
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Content=""
                    IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal">
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarType="Circle"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Content="" />
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarType="Circle"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Content=""
                    IsEnabled="False" />
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.Column="2"
            RowSpan="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style BasedOn="{StaticResource BtnOutline}" TargetType="Button">
                    <Setter Property="Content" Value="{DynamicResource Button}" />
                </Style>
            </Grid.Resources>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button />
                <Button IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button wpf:Button.LeftIcon="User" />
                <Button wpf:Button.LeftIcon="User" IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button wpf:Button.RightIcon="User" />
                <Button wpf:Button.RightIcon="User" IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button wpf:Button.Icon="User" Style="{DynamicResource BtnOutline}" />
                <Button
                    wpf:Button.Icon="User"
                    IsEnabled="False"
                    Style="{DynamicResource BtnOutline}" />
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <Button
                    Width="40"
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Style="{DynamicResource BtnOutline}" />
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    IsEnabled="False"
                    Style="{DynamicResource BtnOutline}" />
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal">
                <Button
                    Width="40"
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarType="Circle"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Style="{DynamicResource BtnOutline}" />
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarType="Circle"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    IsEnabled="False"
                    Style="{DynamicResource BtnOutline}" />
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="2"
            Grid.Column="3"
            RowSpan="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style BasedOn="{StaticResource BtnText}" TargetType="Button">
                    <Setter Property="Content" Value="{DynamicResource Button}" />
                </Style>
            </Grid.Resources>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button />
                <Button IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button wpf:Button.LeftIcon="User" />
                <Button wpf:Button.LeftIcon="User" IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <Button wpf:Button.RightIcon="User" />
                <Button wpf:Button.RightIcon="User" IsEnabled="False" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button
                    Name="BtnTest3"
                    wpf:Button.Icon="User"
                    Style="{DynamicResource BtnText}" />
                <Button
                    wpf:Button.Icon="User"
                    IsEnabled="False"
                    Style="{DynamicResource BtnText}" />
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Style="{DynamicResource BtnText}" />
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    IsEnabled="False"
                    Style="{DynamicResource BtnText}" />
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal">
                <Button
                    Width="40"
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarType="Circle"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    Style="{DynamicResource BtnText}" />
                <Button
                    wpf:Button.ProgressBarMaximum="{Binding ElementName=SliderBtn, Path=Maximum}"
                    wpf:Button.ProgressBarMinimum="{Binding ElementName=SliderBtn, Path=Minimum}"
                    wpf:Button.ProgressBarShow="True"
                    wpf:Button.ProgressBarType="Circle"
                    wpf:Button.ProgressBarValue="{Binding ElementName=SliderBtn, Path=Value}"
                    IsEnabled="False"
                    Style="{DynamicResource BtnText}" />
            </StackPanel>
        </Grid>

        <Slider
            x:Name="SliderBtn"
            Grid.Row="8"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="10"
            Maximum="100"
            Minimum="0" />

        <Separator
            Grid.Row="16"
            Grid.Column="0"
            Grid.ColumnSpan="4" />

        <StackPanel
            Grid.Row="17"
            Grid.Column="1"
            Orientation="Horizontal">
            <Button
                wpf:Button.Position="First"
                Content="{DynamicResource First}"
                Style="{DynamicResource BtnFilled}" />
            <Button
                wpf:Button.Position="Middle"
                Content="{DynamicResource Middle}"
                Style="{DynamicResource BtnFilled}" />
            <Button
                wpf:Button.Position="Last"
                Content="{DynamicResource Last}"
                Style="{DynamicResource BtnFilled}" />
        </StackPanel>

        <StackPanel
            Grid.Row="17"
            Grid.Column="2"
            Orientation="Horizontal">
            <Button wpf:Button.Position="First" Content="{DynamicResource First}" />
            <Button wpf:Button.Position="Middle" Content="{DynamicResource Middle}" />
            <Button wpf:Button.Position="Last" Content="{DynamicResource Last}" />
        </StackPanel>
    </Grid>
</UserControl>
