<UserControl
    d:DesignHeight="1000"
    d:DesignWidth="1920"
    mc:Ignorable="d"
    x:Class="Arion.Theme.Test.Views.ProgressBars"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arion.Theme.Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Content="Progress Bars"
            FontSize="32"
            Grid.Column="0"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Margin="10"
            Padding="0"
            Style="{DynamicResource Lbl}"
            VerticalAlignment="Top"
            Width="Auto" />

        <smtx:XamlDisplay
            Grid.Column="0"
            Grid.Row="1"
            Margin="5"
            UniqueKey="ProgressBar1">
            <ProgressBar
                Maximum="65535"
                Minimum="0"
                Value="{Binding ElementName=Slider, Path=Value}" />
        </smtx:XamlDisplay>
        <smtx:XamlDisplay
            Grid.Column="0"
            Grid.Row="2"
            Margin="5"
            UniqueKey="ProgressBar2">
            <ProgressBar
                Maximum="65535"
                Minimum="0"
                Value="{Binding ElementName=Slider, Path=Value}"
                wpf:ProgressBar.ShowProgress="True" />
        </smtx:XamlDisplay>
        <smtx:XamlDisplay
            Grid.Column="0"
            Grid.Row="3"
            Margin="5"
            UniqueKey="3">
            <ProgressBar
                IsIndeterminate="True"
                Maximum="65535"
                Minimum="0" />
        </smtx:XamlDisplay>

        <ProgressBar
            Grid.Column="1"
            Grid.Row="1"
            Height="40"
            Maximum="65535"
            Minimum="0"
            Style="{DynamicResource RoundProgressBarStyle}"
            Value="{Binding ElementName=Slider, Path=Value}"
            Width="40" />

        <ProgressBar
            Grid.Column="1"
            Grid.Row="2"
            Maximum="65535"
            Minimum="0"
            Style="{DynamicResource RoundProgressBarStyle}"
            Value="{Binding ElementName=Slider, Path=Value}" />

        <ProgressBar
            Grid.Column="1"
            Grid.Row="3"
            IsIndeterminate="True"
            Maximum="65535"
            Minimum="0"
            Style="{DynamicResource RoundProgressBarStyle}" />

        <Slider
            Grid.Column="0"
            Grid.Row="5"
            Margin="5"
            Maximum="65535"
            Minimum="0"
            Name="Slider"
            Value="50" />
    </Grid>
</UserControl>