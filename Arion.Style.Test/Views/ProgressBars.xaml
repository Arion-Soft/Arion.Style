<UserControl
    x:Class="Arion.Theme.Test.Views.ProgressBars"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arion.Theme.Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    d:DesignHeight="1000"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Width="Auto"
            Margin="10"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Progress Bars"
            FontSize="32"
            Style="{DynamicResource Lbl}" />

        <ProgressBar
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Maximum="65535"
            Minimum="0"
            Value="{Binding ElementName=Slider, Path=Value}" />
        <ProgressBar
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            wpf:ProgressBar.ShowProgress="True"
            Maximum="65535"
            Minimum="0"
            Value="{Binding ElementName=Slider, Path=Value}" />
        <ProgressBar
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            IsIndeterminate="True"
            Maximum="65535"
            Minimum="0" />

        <ProgressBar
            Grid.Row="1"
            Grid.Column="1"
            Width="40"
            Height="40"
            Maximum="65535"
            Minimum="0"
            Style="{DynamicResource RoundProgressBarStyle}"
            Value="{Binding ElementName=Slider, Path=Value}" />

        <ProgressBar
            Grid.Row="2"
            Grid.Column="1"
            Maximum="65535"
            Minimum="0"
            Style="{DynamicResource RoundProgressBarStyle}"
            Value="{Binding ElementName=Slider, Path=Value}" />

        <ProgressBar
            Grid.Row="3"
            Grid.Column="1"
            IsIndeterminate="True"
            Maximum="65535"
            Minimum="0"
            Style="{DynamicResource RoundProgressBarStyle}" />

        <Slider
            Name="Slider"
            Grid.Row="5"
            Grid.Column="0"
            Margin="5"
            Maximum="65535"
            Minimum="0"
            Value="50" />
    </Grid>
</UserControl>