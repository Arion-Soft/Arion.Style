        <ListView
            Grid.Column="3"
            Grid.Row="1"
            ItemContainerStyle="{DynamicResource ItemOutlineRight}">
            <ListView.Items>
                <ListViewItem Content="List view item 1" />
                <ListViewItem Content="List view item 2" />
                <ListViewItem Content="List view item 3" />
                <ListViewItem Content="List view item 4" />
                <ListViewItem Content="List view item 5" />
                <ListViewItem Content="List view item 6" />
                <ListViewItem Content="List view item 7" />
                <ListViewItem Content="List view item 8" />
