<UserControl
    x:Class="Arion.Theme.Test.Views.CheckBoxes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Arion.Theme.Test.ViewModel"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    d:DesignHeight="1000"
    d:DesignWidth="1900"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:CheckBoxViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Width="Auto"
            Margin="10"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="CheckBox"
            FontSize="32"
            Style="{DynamicResource Lbl}" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox Content="CheckBox" />
            <CheckBox Content="CheckBox" IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox Content="CheckBox" IsChecked="True" />
            <CheckBox
                Content="CheckBox"
                IsChecked="True"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox
                Content="CheckBox"
                IsChecked="{x:Null}"
                IsThreeState="True" />
            <CheckBox
                Content="CheckBox"
                IsChecked="{x:Null}"
                IsEnabled="False"
                IsThreeState="True" />
        </StackPanel>

        <CheckBox
            Grid.Row="4"
            Grid.Column="0"
            wpf:CheckBox.BoxMarkHeight="40"
            wpf:CheckBox.BoxMarkWidth="40"
            wpf:CheckBox.MarkHeight="20"
            wpf:CheckBox.MarkWidth="30"
            Content="CheckBox"
            IsChecked="True"
            IsThreeState="True" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox wpf:CheckBox.Description="Helpful description of the option which may briefly highlight side effects or conditions of the option." Content="CheckBox" />
            <CheckBox
                wpf:CheckBox.Description="Helpful description of the option which may briefly highlight side effects or conditions of the option."
                Content="CheckBox"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox
                wpf:CheckBox.Description="Helpful description of the option which may briefly highlight side effects or conditions of the option."
                Content="CheckBox"
                IsChecked="True" />
            <CheckBox
                wpf:CheckBox.Description="Helpful description of the option which may briefly highlight side effects or conditions of the option."
                Content="CheckBox"
                IsChecked="True"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox
                wpf:CheckBox.Description="Helpful description of the option which may briefly highlight side effects or conditions of the option."
                Content="CheckBox"
                IsChecked="{x:Null}" />
            <CheckBox
                wpf:CheckBox.Description="Helpful description of the option which may briefly highlight side effects or conditions of the option."
                Content="CheckBox"
                IsChecked="{x:Null}"
                IsEnabled="False" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox />
            <CheckBox IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox IsChecked="True" />
            <CheckBox IsChecked="True" IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="2"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <CheckBox IsChecked="{x:Null}" IsThreeState="True" />
            <CheckBox
                IsChecked="{x:Null}"
                IsEnabled="False"
                IsThreeState="True" />
        </StackPanel>
    </Grid>
</UserControl>
