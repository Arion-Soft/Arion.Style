<UserControl
    x:Class="Arion.Theme.Test.Views.Switchers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arion.Theme.Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    d:DesignHeight="1000"
    d:DesignWidth="1900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Width="Auto"
            Margin="10"
            Padding="0"
            VerticalAlignment="Top"
            Content="Switcher"
            Style="{DynamicResource Lbl}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Standard"
            FontSize="18" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Left Icon"
            FontSize="18" />
        <Label
            Grid.Row="4"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Right Icon"
            FontSize="18" />
        <Label
            Grid.Row="5"
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="Icon"
            FontSize="18" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Content="Filled"
            Style="{DynamicResource Lbl}" />

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Horizontal">
            <RadioButton
                x:Name="Switcher1"
                Margin="0,5"
                wpf:Switcher.Position="First"
                Content="First"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                x:Name="Switcher2"
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                x:Name="Switcher3"
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                IsChecked="True"
                IsEnabled="False"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                x:Name="Switcher4"
                Margin="0,5"
                wpf:Switcher.Position="Last"
                Content="Last"
                Style="{DynamicResource SwitcherFilled}" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="First"
                Content="First"
                IsChecked="{Binding ElementName=Switcher1, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                IsChecked="{Binding ElementName=Switcher2, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                IsEnabled="False"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="Last"
                Content="Last"
                IsChecked="{Binding ElementName=Switcher4, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="First"
                wpf:Switcher.RightIcon="User"
                Content="First"
                IsChecked="{Binding ElementName=Switcher1, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                wpf:Switcher.RightIcon="User"
                Content="Middle"
                IsChecked="{Binding ElementName=Switcher2, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                wpf:Switcher.RightIcon="User"
                Content="Middle"
                IsEnabled="False"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Last"
                wpf:Switcher.RightIcon="User"
                Content="Last"
                IsChecked="{Binding ElementName=Switcher4, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="First"
                IsChecked="{Binding ElementName=Switcher1, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                IsChecked="{Binding ElementName=Switcher2, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                IsEnabled="False"
                Style="{DynamicResource SwitcherFilled}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Last"
                IsChecked="{Binding ElementName=Switcher4, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherFilled}" />
        </StackPanel>

        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Content="Outlined"
            Style="{DynamicResource Lbl}" />

        <StackPanel
            Grid.Row="2"
            Grid.Column="2"
            Margin="10,0,0,0"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="First"
                Content="First"
                IsChecked="{Binding ElementName=Switcher1, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                IsChecked="{Binding ElementName=Switcher2, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                IsChecked="True"
                IsEnabled="False"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Last"
                Content="Last"
                IsChecked="{Binding ElementName=Switcher4, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="2"
            Margin="10,0,0,0"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="First"
                Content="First"
                IsChecked="{Binding ElementName=Switcher1, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                IsChecked="{Binding ElementName=Switcher2, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="Middle"
                Content="Middle"
                IsEnabled="False"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.LeftIcon="User"
                wpf:Switcher.Position="Last"
                Content="Last"
                IsChecked="{Binding ElementName=Switcher4, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="2"
            Margin="10,0,0,0"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="First"
                wpf:Switcher.RightIcon="User"
                Content="First"
                IsChecked="{Binding ElementName=Switcher1, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                wpf:Switcher.RightIcon="User"
                Content="Middle"
                IsChecked="{Binding ElementName=Switcher2, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Middle"
                wpf:Switcher.RightIcon="User"
                Content="Middle"
                IsEnabled="False"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Position="Last"
                wpf:Switcher.RightIcon="User"
                Content="Last"
                IsChecked="{Binding ElementName=Switcher4, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.Column="2"
            Margin="10,0,0,0"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="First"
                IsChecked="{Binding ElementName=Switcher1, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                IsChecked="{Binding ElementName=Switcher2, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                IsEnabled="False"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Last"
                IsChecked="{Binding ElementName=Switcher4, Path=IsChecked, Delay=1000}"
                Style="{DynamicResource SwitcherOutline}" />
        </StackPanel>
        <StackPanel
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="First"
                Background="White"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.BorderThicknessSelected="4"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                Background="{StaticResource Lg3}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                Background="{StaticResource Lg1}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                Background="{StaticResource Mg4}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Middle"
                Background="{StaticResource Mg2}"
                Style="{DynamicResource SwitcherOutline}" />
            <RadioButton
                Margin="0,5"
                wpf:Switcher.Icon="User"
                wpf:Switcher.Position="Last"
                Background="{StaticResource Dg5}"
                Style="{DynamicResource SwitcherOutline}" />
        </StackPanel>
    </Grid>
</UserControl>
