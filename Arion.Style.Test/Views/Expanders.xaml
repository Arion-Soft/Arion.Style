<UserControl
    x:Class="Arion.Theme.Test.Views.Expanders"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arion.Theme.Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    d:DesignHeight="1000"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Width="Auto"
            Margin="10"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Expander"
            FontSize="32"
            Style="{DynamicResource Lbl}" />

        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Expander
                DockPanel.Dock="Top"
                ExpandDirection="Down"
                Header="Expander"
                IsExpanded="False">
                <Expander.Content>
                    <Label Content="Expander content" />
                </Expander.Content>
            </Expander>
            <Expander
                DockPanel.Dock="Bottom"
                ExpandDirection="Up"
                Header="Expander">
                <Expander.Content>
                    <Label Content="Expander content" />
                </Expander.Content>
            </Expander>
            <Expander
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                ExpandDirection="Left"
                Header="Expander">
                <Expander.Content>
                    <Label Content="Expander content" />
                </Expander.Content>
            </Expander>
            <Expander
                HorizontalAlignment="Left"
                DockPanel.Dock="Left"
                ExpandDirection="Right"
                Header="Expander">
                <Expander.Content>
                    <Label Content="Expander content" />
                </Expander.Content>
            </Expander>

        </DockPanel>
    </Grid>
</UserControl>
