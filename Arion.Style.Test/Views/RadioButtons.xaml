<UserControl
    x:Class="Arion.Theme.Test.Views.RadioButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Arion.Theme.Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    d:DesignHeight="1000"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Width="Auto"
            Margin="10"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="RadioButton"
            FontSize="32"
            Style="{DynamicResource Lbl}" />

        <RadioButton
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Content="RadioButton"
            GroupName="Group1" />
        <RadioButton
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Top"
            Content="RadioButton"
            GroupName="Group1"
            IsEnabled="False" />
        <RadioButton
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Top"
            Content="RadioButton"
            GroupName="Group1"
            IsChecked="True" />
        <RadioButton
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Top"
            wpf:RadioButton.Description="Helpful description of the option which may briefly highlight side effects or conditions of the                           option."
            Content="RadioButton"
            GroupName="Group2" />
        <RadioButton
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Top"
            wpf:RadioButton.Description="Helpful description of the option which may briefly highlight side effects or conditions of the                           option."
            Content="RadioButton"
            GroupName="Group2"
            IsEnabled="False" />
        <RadioButton
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Top"
            wpf:RadioButton.Description="Helpful description of the option which may briefly highlight side effects or conditions of the                           option."
            Content="RadioButton"
            GroupName="Group2" />

        <RadioButton
            Grid.Row="1"
            Grid.Column="2"
            Margin="5"
            VerticalAlignment="Top"
            GroupName="Group3" />

        <RadioButton
            Grid.Row="2"
            Grid.Column="2"
            Margin="5"
            VerticalAlignment="Top"
            GroupName="Group3"
            IsEnabled="False" />

        <RadioButton
            Grid.Row="3"
            Grid.Column="2"
            Margin="5"
            VerticalAlignment="Top"
            GroupName="Group3" />

        <local:Switchers
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="4" />
    </Grid>
</UserControl>